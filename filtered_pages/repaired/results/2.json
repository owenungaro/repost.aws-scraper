{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::S3 bucket Name",
        "arn:aws:s3:::S3 bucket Name/*"
      ],
      "Condition": {
        "StringNotEquals": {
          "aws:SourceVpce": "VPC Endpoint ID",
          "aws:PrincipalArn": "IAM User ARN"
        }
      }
    }
  ]
}