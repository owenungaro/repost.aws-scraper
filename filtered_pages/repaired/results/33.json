{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "sts:AssumeRole",
      "Condition": {
        "StringLike": {
          "aws:PrincipalArn": [
            "arn:aws:iam::ACCOUNT_ID:role/service-role/codebuild-prod-*",
            "arn:aws:iam::ACCOUNT_ID:role/service-role/codebuild-dev-*",
            "arn:aws:iam::ACCOUNT_ID:role/service-role/codebuild-staging-*"
          ]
        }
      }
    }
  ]
}