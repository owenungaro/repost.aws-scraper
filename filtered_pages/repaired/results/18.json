{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "ssm:StartSession",
      "Resource": [
        "arn:aws:ssm:us-east-1:*:document/AWS-StartPortForwardingSessionToRemoteHost",
        "arn:aws:ec2:us-east-1:**************:instance/*"
      ],
      "Effect": "Allow",
      "Sid": "EnableSSMSession"
    },
    {
      "Action": "ec2:DescribeInstances",
      "Resource": "*",
      "Effect": "Allow",
      "Sid": "DescribeEC2"
    }
  ]
}