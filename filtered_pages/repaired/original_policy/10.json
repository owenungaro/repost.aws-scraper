{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "DenyCreateOperationSCP1",
      "Effect": "Deny",
      "Action": [
        "ec2:RunInstances"
      ],
      "Resource": [
        "arn:aws:ec2:*:*:instance/*"
      ],
      "Condition": {
        "Null": {
          "aws:RequestTag/Customer": "true",
          "aws:RequestTag/Name": "true"
        }
      }
    },
    {
      "Sid": "DenyDeleteTag1",
      "Effect": "Deny",
      "Action": [
        "ec2:DeleteTags"
      ],
      "Resource": [
        "arn:aws:ec2:*:*:instance/*"
      ],
      "Condition": {
        "Null": {
          "aws:RequestTag/Customer": "true",
          "aws:RequestTag/Name": "true"
        }
      }
    }
  ]
}