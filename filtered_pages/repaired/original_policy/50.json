{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::{ACC-ID}:oidc-provider/{OIDC URL}"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "{OIDC URL}:sub": "system:serviceaccount:{NAMESPACE}:{SA-NAME}"
        }
      }
    }
  ]
}