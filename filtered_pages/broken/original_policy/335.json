{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowS3AccessForFTP",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetObject",
        "s3:PutObject",
        "s3:GetObjectAcl",
        "s3:PutObjectAcl",
        "s3:ListAllMyBuckets",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::image.k-sale.com",
        "arn:aws:s3:::image.k-sale.com/*"
      ]
    }
  ]
}