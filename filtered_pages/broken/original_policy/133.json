{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": "s3:ListBucket",
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::<my-bucket>"
      ],
      "Sid": "AllowListDirectories",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "data/partner_2/*"
          ]
        }
      }
    },
    {
      "Sid": "DenyMkdir",
      "Action": [
        "s3:PutObject"
      ],
      "Effect": "Deny",
      "Resource": "arn:aws:s3:::<my-bucket>/*/"
    },
    {
      "Sid": "DenyListFilesInSubDirectory",
      "Action": [
        "s3:ListBucket"
      ],
      "Effect": "Deny",
      "Resource": "arn:aws:s3:::<my-bucket>",
      "Condition": {
        "StringLike": {
          "s3:prefix": [
            "data/partner_2/data/incoming/*"
          ]
        }
      }
    },
    {
      "Effect": "AllowReadWirteInSubDirectory",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion",
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:PutObjectTagging",
        "s3:PutObjectVersionAcl",
        "s3:PutObjectVersionTagging"
      ],
      "Resource": "arn:aws:s3:::<my-bucket>/data/partner_2/data/incoming/*"
    },
    {
      "Effect": "AllowOnlyReadInADifferentDirectory",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion"
      ],
      "Resource": "arn:aws:s3:::<my-bucket>/data/partner_2/data/outgoing/*"
    }
  ]
}