{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Statement1",
      "Effect": "Allow",
      "Principal": "*",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:GetBucketPolicy",
        "s3:PutBucketPolicy",
        "s3:GetAccelerateConfiguration",
        "s3:PutAccelerateConfiguration"
      ],
      "Resource": [
        "arn:aws:s3:::<our_bucket_name>/*",
        "arn:aws:s3:::<our_bucket_name>"
      ]
    }
  ]
}