{
  "Version": "2012-10-17",
  "Id": "BackupPolicy01",
  "Statement": [
    {
      "Sid": "BackupPolicy01",
      "Effect": "Allow",
      "Principal": {
        "AWS": "arn:aws:iam::83743546469343:user/user-backup"
      },
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::my-backup/*",
        "arn:aws:s3:::my-backup"
      ],
      "Condition": {
        "IpAddress": {
          "aws:SourceIp": "123.87.210.171/32"
        }
      }
    }
  ]
}