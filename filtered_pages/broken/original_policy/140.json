{
  "Version": "2012-10-17",
  "Id": "PolicyForWebsiteAccess",
  "Statement": [
    {
      "Sid": "AllowWebsiteAccessForViewing",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": "arn:aws:s3:::mybucket/*",
      "Condition": {
        "StringLike": {
          "aws:Referer": [
            "https://example.com/*",
            "https://example.com"
          ]
        }
      }
    },
    {
      "Sid": "AllowWebsiteAccessForUploads",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:PutObject",
      "Resource": "arn:aws:s3:::mybucket/*",
      "Condition": {
        "StringLike": {
          "aws:Referer": [
            "https://example.com/*",
            "https://example.com"
          ]
        }
      }
    }
  ]
}