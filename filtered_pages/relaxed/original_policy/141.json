{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:UpdateItem"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:<ACCOUNT>:table/<TABLE>"
      ],
      "Condition": {
        "ForAllValues:StringEquals": {
          "dynamodb:LeadingKeys": [
            "part123"
          ],
          "dynamodb:Attributes": [
            "mykey",
            "mymap"
          ]
        }
      }
    }
  ]
}