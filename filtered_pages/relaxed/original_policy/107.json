{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "AWS": "*"
      },
      "Action": "sns:Publish",
      "Resource": "arn:aws:sns:eu-west-1:account-b-id:sns-topic-name",
      "Condition": {
        "StringEquals": {
          "AWS:SourceAccount": [
            "account-b-id",
            "account-a-id"
          ]
        }
      }
    }
  ]
}